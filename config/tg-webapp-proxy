
server {
    listen 443 ssl;
    server_name www.phunkao.fun;

    ssl_certificate /etc/letsencrypt/live/www.phunkao.fun/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/www.phunkao.fun/privkey.pem;
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers ECDHE-RSA-AES128-GCM-SHA256:ECDHE-RSA-AES256-GCM-SHA384;
    ssl_prefer_server_ciphers off;

    client_max_body_size 10M;

    location /webapp {
	alias /home/mickey/solid-barnacle/supreme-dollop/dist;
	try_files $uri $uri/ /webapp/index.html;

	expires 1y;
	add_header Cache-Control "public, immutable";
    }

    location = / {
	return 301 /webapp;
}

    access_log /var/log/nginx/webapp_access.log;
    error_log /var/log/nginx/webapp_error.log;
}
server {
    listen 8008;
    server_name www.phunkao.fun;

    location /api {
       # allow 127.0.0.1;
       # deny all;

       add_header 'Access-Control-Allow-Origin' 'http://phunkao.fun' always;

        proxy_pass http://127.0.0.1:8000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;

        proxy_connect_timeout 300s;
        proxy_send_timeout 300s;
        proxy_read_timeout 300s;
    }


    access_log /var/log/nginx/tg_webapp_api_access.log;
    error_log /var/log/nginx/tg_webapp_api_error.log;
}
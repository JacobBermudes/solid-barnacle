
server {
    listen 8443 ssl;
    server_name www.phunkao.fun;

    ssl_certificate /etc/letsencrypt/live/www.phunkao.fun/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/www.phunkao.fun/privkey.pem;
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers ECDHE-RSA-AES128-GCM-SHA256:ECDHE-RSA-AES256-GCM-SHA384;
    ssl_prefer_server_ciphers off;

    location /webhook {
        proxy_pass http://127.0.0.1:8080;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        proxy_connect_timeout 300s;
        proxy_send_timeout 300s;
        proxy_read_timeout 300s;
    }

    access_log /var/log/nginx/tg_webhook_access.log;
    error_log /var/log/nginx/tg_webhook_error.log;
}